                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.RowSpan="2" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Name="UserNameBlock" FontWeight="Bold" Foreground="{ThemeResource DoubanTextColor03}"
                                   Text="User" FontSize="50" Margin="15,0,0,0"/>
                                <TextBlock Name="GenderBlock" FontFamily="Segoe MDL2 Assets" Text="&#xEA8C;" VerticalAlignment="Center" FontSize="14" Margin="7,5,0,0"/>
                            </StackPanel>
                            <TextBlock Name="LocationBlock" Grid.Row="1" FontWeight="SemiBold" 
                                   Text="Location" FontSize="35" Margin="15,0,0,5" Foreground="#808080"/>
                        </StackPanel>
                    </Grid>

                    <Grid Name="BTN_GRID" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="0.55*"/>
                        </Grid.ColumnDefinitions>
                        <Button Name="TalkButton" HorizontalAlignment="Stretch" 
                                Style="{ThemeResource SpecialButtonAbort}" x:Uid="TalkButton"
                                Height="70" Margin="10,0,5,0" FontSize="35" FontWeight="SemiBold" 
                                Content="SX" Click="TalkButton_Click"/>
                        <Button Name="WatchButton" Grid.Column="1" HorizontalAlignment="Stretch" 
                                Style="{ThemeResource SpecialButtonSubmit}" x:Uid="WatchButton"
                                Height="70" Margin="10,0,5,0" FontSize="35" FontWeight="SemiBold" 
                                Content="GZ" Click="WatchButton_Click"/>
                        <Button Name="FlowButton" Grid.Column="2" HorizontalAlignment="Stretch" 
                                Style="{ThemeResource SpecialButtonSubmit}" FontFamily="Segoe MDL2 Assets"
                                Height="70" Margin=" 0,0,10,0" FontSize="35"  FontWeight="SemiBold" 
                                Content="&#xE011;" Click="FlowButton_Click"/>
                    </Grid>

                    <Grid Name="M_DES_GRID" Grid.Row ="1" Grid.ColumnSpan ="2">
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Name="DescriptionBlock" TextWrapping="WrapWholeWords" Text="PlaceHolder" Margin="15,10,10,5" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column ="1" FontFamily="Segoe MDL2 Assets" Text="&#xE00F;" Foreground="#CC808080"
                                       FontSize="20"  FontWeight="Black" VerticalAlignment ="Center" Margin="5,10,15,5"/>
                        </Grid>
                        <Button VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                                Style="{ThemeResource MainPageButtonBackHamburgerStyle}" Background="Transparent" />
                    </Grid>

                </Grid>

                <Grid Background="{ThemeResource DoubanBackground04}">
                    <Rectangle Fill="#AAA0A0A0" Height="0.5" Visibility="Visible" Opacity="0.3" Margin="0,0,0,0" VerticalAlignment="Top" />
