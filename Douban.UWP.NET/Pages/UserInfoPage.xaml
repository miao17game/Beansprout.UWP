        <ScrollViewer Name="Scroll" >

            <StackPanel>

                <Grid Name="HeadGrid" Height="420" VerticalAlignment="Top" Background="Black">

                    <Image Name="BackgroundImage" Source="/Assets/188.jpg" Stretch="UniformToFill" Opacity="0.8"/>
                    <StackPanel Name="HeadContainerStack" VerticalAlignment="Bottom" Margin="0,0,0,10">
                        <Border x:Name="border" CornerRadius="75" Background="White" Width="150" Height="150" Margin="0,0,0,20">
                            <Ellipse Name="HeadUserImage" Width="140" Height="140" >
                                <Ellipse.Fill>
                                    <SolidColorBrush Color="#707070"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Border>
                    </StackPanel>

                    <Border Name="BasePartBorder" 
                            Background="Transparent" 
                            Height="70" VerticalAlignment="Top">
                        <TextBlock Name="navigateTitlePath"
                       x:Uid="UserInfos_Title"
                       MaxWidth="500"
                       FontWeight="Bold"
                       Text="USERINFOS" FontSize="20"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Foreground="White"/>
                    </Border>
                    <Button Name="BaseHamburgerButton"
                            VerticalAlignment="Top"
                            Content="&#xE26C;"
                            Width="70"
                            Height="70"
                            Click="BaseHamburgerButton_Click"
                            Foreground="White"
                            Style="{ThemeResource MainPageButtonBackHamburgerStyle}"/>
                    <Button Name="FlowLayoutButton"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Content="&#xE10C;"
                            Width="70"
                            Height="70"
                            FontWeight="Black"
                            Foreground="White"
                            Style="{ThemeResource MainPageButtonBackHamburgerStyle}">
                        <Button.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem x:Uid="LogoutText" Name="LogoutButton" Click="LogoutButton_Click"/>
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                    <Border Height="20" Width="60" HorizontalAlignment="Right" Margin="0,0,10,5"
                    VerticalAlignment="Bottom"  CornerRadius="2" Background="{ThemeResource DoubanForeground}">
                        <TextBlock Text="开发中" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="9" Foreground="White"/>
                    </Border>
                </Grid>

                <Grid Background="{ThemeResource DoubanBackground04}" Name="DescriptionGrid" Height="320" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="1.5*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

