<Page
    x:Class="Douban.UWP.NET.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Douban.UWP.NET.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--#region Page.Resources-->
    <Page.Resources>
        <Style x:Key="SummaryTextStyle" TargetType="TextBlock" >
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Thin"/>
            <Setter Property="Foreground" Value="{ThemeResource AppPersonalTextColorAlphaItem01}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="TitleTextStyle" TargetType="TextBlock" >
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="{ThemeResource AppPersonalTextColorPure02}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>
    <!--#endregion-->

    <Grid Name="grid" Background="{ThemeResource DoubanBackground04}">

        <!--#region StateTriggers-->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">
                <VisualState x:Name="Mobile360">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                        <Setter Target="IconImage.(FrameworkElement.MaxWidth)" Value="300"/>
                        <Setter Target="IconImage.(FrameworkElement.Margin)" >
                            <Setter.Value>0,-70</Setter.Value>
                        </Setter>

                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Mobile480">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="361"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                        <Setter Target="IconImage.(FrameworkElement.MaxWidth)" Value="300"/>
                        <Setter Target="IconImage.(FrameworkElement.Margin)" >
                            <Setter.Value>0,-70</Setter.Value>
                        </Setter>

                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Desktop">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="400" MinWindowWidth="800"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="DesktopExtra_Tablet">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="700" MinWindowWidth="1300"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="DesktopExtra_LightTablet">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="1300"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <!--#endregion-->

        <Grid.Transitions>
            <TransitionCollection>
                <EntranceThemeTransition FromVerticalOffset="400"/>
            </TransitionCollection>
        </Grid.Transitions>

        <Pivot Width="{Binding Width, ElementName=grid ,Mode=OneWay}"
               SelectionChanged="Pivot_SelectionChanged">
            
            <Pivot.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Margin="10,3,5,3" FontSize="18" />
                </DataTemplate>
            </Pivot.HeaderTemplate>
            
            <!--#region Settings-->
            <PivotItem Name="Settings" x:Uid="SettPageItem_Settings">
                <ScrollViewer>
                    <StackPanel>
                        
                        <!--#region Visual options-->
                        <StackPanel Orientation="Vertical" 
                                    Margin=" 10,25,10,0">
                            <TextBlock x:Uid="VisualOptions" FontWeight="Black"
                                   Style="{StaticResource SummaryTextStyle}"/>
                            <Rectangle Height="1" Margin=" 0,5,0,0" Fill="{ThemeResource DQDSummTextColor}"/>
                        </StackPanel>
                        <Grid Margin="10,10,10,0" >
                            <StackPanel Orientation="Vertical">
                                <TextBlock x:Uid="DarkMode"
                                   Style="{StaticResource TitleTextStyle}"/>
                                <TextBlock x:Uid="DarkModeSummary"
                                   Style="{StaticResource SummaryTextStyle}"/>
                            </StackPanel>
                            <ToggleSwitch Name="ThemeSwitch" 
                                      Style="{ThemeResource ThemeModeSwitch}" 
                                      HorizontalAlignment="Right"
                                      Margin="0,0,-100,0"
                                      OnContent=" " 
                                      OffContent=" " 
                                      Toggled="Switch_Toggled" />
                        </Grid>
                        <Grid Margin="10,10,10,0" >
                            <StackPanel Orientation="Vertical">
                                <TextBlock x:Uid="DivideSwitch"
                                   Style="{StaticResource TitleTextStyle}"/>
                                <TextBlock x:Uid="DivideSwitchSummary"
                                   Style="{StaticResource SummaryTextStyle}"/>
                            </StackPanel>
                            <ToggleSwitch Name="ScreenSwitch" 
                                      Style="{ThemeResource ThemeModeSwitch}" 
                                      HorizontalAlignment="Right"
                                      Margin="0,0,-100,0"
                                      OnContent=" " 
                                      OffContent=" " 
                                      Toggled="Switch_Toggled" />
                        </Grid>
                        <Grid Margin="10,10,10,0" >
                            <StackPanel Orientation="Vertical">
                                <TextBlock x:Uid="SplitMode"
                                   Style="{StaticResource TitleTextStyle}"/>
                                <TextBlock x:Uid="SplitSummary"
                                   Style="{StaticResource SummaryTextStyle}"/>
                            </StackPanel>
                            <Slider Name="SplitSizeSlider" 
                                    Style="{ThemeResource NewDefaultSlider}"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,10,0"
                                    MinWidth="150"
                                    Maximum="70"
                                    Minimum="30"
                                    ValueChanged="SplitSizeSlider_ValueChanged"/>
                        </Grid>
                        <!--#endregion-->

                        <!--#region Toast options-->
                        <StackPanel Orientation="Vertical" 
                                    Margin=" 10,25,10,0">
                            <TextBlock x:Uid="ToastOptions" FontWeight="Black"
                                   Style="{StaticResource SummaryTextStyle}"/>
                            <Rectangle Height="1" Margin=" 0,5,0,0" Fill="{ThemeResource DQDSummTextColor}"/>
                        </StackPanel>

                        <Grid Margin="10,10,10,0" >
                            <StackPanel Orientation="Vertical">
                                <TextBlock x:Uid="ToastSendMode"
                                   Style="{StaticResource TitleTextStyle}"/>
                                <TextBlock x:Uid="ToastSendSummary"
                                   Style="{StaticResource SummaryTextStyle}"/>
                            </StackPanel>
                            <ToggleSwitch Name="ToastSendSwitch" 
                                      Style="{ThemeResource ThemeModeSwitch}" 
                                      HorizontalAlignment="Right"
                                      Margin="0,0,-100,0"
                                      OnContent=" " 
                                      OffContent=" " 
                                      Toggled="Switch_Toggled" />
                        </Grid>

                        <Grid Margin="10,10,10,0" >
                            <StackPanel Orientation="Vertical">
                                <TextBlock x:Uid="ToastMode"
                                   Style="{StaticResource TitleTextStyle}"/>
                                <TextBlock x:Uid="ToastModeSummary"
                                   Style="{StaticResource SummaryTextStyle}"/>
                            </StackPanel>
                            <ComboBox Name="ToastCombox" 
                                      Style="{ThemeResource SpecialComboBox}"
                                      HorizontalAlignment="Right"
                                      MinWidth="150"
                                      SelectionChanged="ToastCombox_SelectionChanged">
                                <ComboBoxItem Name="Voice_Yiner" x:Uid="Voice_Yiner_Laugh"/>
                                <ComboBoxItem Name="Voice_Haizi" x:Uid="Voice_Haize_Breezing"/>
                                <ComboBoxItem Name="Voice_Yellsedtsr" x:Uid="Voice_Haizi_Aqi"/>
                                <ComboBoxItem Name="Voice_AMeng" x:Uid="Voice_Haizi_AMeng"/>
                                <ComboBoxItem Name="Voice_Xiaoxin" x:Uid="Voice_Haizi_Xiaoxin"/>
                                <ComboBoxItem Name="Voice_CS_FireInTheHole" x:Uid="Voice_CS_FireInTheHole"/>
                                <ComboBoxItem Name="Voice_CS_GO" x:Uid="Voice_CS_GO"/>
                            </ComboBox>
                        </Grid>

                        <Grid Margin="10,10,10,0" >
                            <StackPanel Orientation="Vertical">
                                <TextBlock x:Uid="ToastVoicePreview"
                                   Style="{StaticResource TitleTextStyle}"/>
                                <TextBlock x:Uid="ToastVoicePreviewSummary"
                                           Style="{StaticResource SummaryTextStyle}"/>
                            </StackPanel>
                            <Grid HorizontalAlignment="Right">
                                <MediaPlayerElement Name="VoiceContentElement"
                                                    Visibility="Collapsed"/>
                                <Button Name="ListenVoiceBtn" 
                                        x:Uid="ToastVoiceListener"
                                        HorizontalAlignment="Right"
                                        Margin="0,0,5,0"
                                        FontSize="16"
                                        Style="{StaticResource SpecialButtonAbort}" 
                                        Background="{ThemeResource DoubanForeground01}"
                                        VerticalAlignment="Stretch"
                                        Click="ListenVoiceBtn_Click"/>
                            </Grid>
                        </Grid>

                        <!--#endregion-->

                        <!--#region Lanuage options-->
                        <StackPanel Orientation="Vertical" 
                                    Margin=" 10,25,10,0">
                            <TextBlock x:Uid="LanguageOptions" FontWeight="Black"
                                   Style="{StaticResource SummaryTextStyle}"/>
                            <Rectangle Height="1" Margin=" 0,5,0,0" Fill="{ThemeResource DQDSummTextColor}"/>
                        </StackPanel>
                        
                        <Grid Margin="10,10,10,0" >
                            <StackPanel Orientation="Vertical">
                                <TextBlock x:Uid="LanguageMode"
                                   Style="{StaticResource TitleTextStyle}"/>
                                <TextBlock x:Uid="LanguageModeSummary"
                                   Style="{StaticResource SummaryTextStyle}"/>
                            </StackPanel>
                            <ComboBox Name="LanguageCombox" 
                                      Style="{ThemeResource SpecialComboBox}"
                                      HorizontalAlignment="Right"
                                      MinWidth="150"
                                      SelectionChanged="LanguageCombox_SelectionChanged">
                                <ComboBoxItem Name="enUSSelect" Content="English"/>
                                <ComboBoxItem Name="zhCNSelect" Content="简体中文"/>
                            </ComboBox>
                        </Grid>
                        <!--#endregion-->

                        <!--#region Other settings-->
                        <StackPanel Orientation="Vertical" 
                                    Margin=" 10,25,10,0">
                            <TextBlock x:Uid="OtherOptions" FontWeight="Black"
                                   Style="{StaticResource SummaryTextStyle}"/>
                            <Rectangle Height="1" Margin=" 0,5,0,0" Fill="{ThemeResource DQDSummTextColor}"/>
                        </StackPanel>

                        <Grid Margin="10,10,10,0" >
                            <StackPanel Orientation="Vertical">
                                <TextBlock x:Uid="TPTITLE_Title"
                                   Style="{StaticResource TitleTextStyle}"/>
                                <TextBlock x:Uid="TPTITLE_Title_Summary"
                                           Style="{StaticResource SummaryTextStyle}"/>
                            </StackPanel>
                            <Grid HorizontalAlignment="Right">
                                <Button Name="SecondTitleBtn" 
                                        x:Uid="TPTITLE_Title_Pin"
                                        HorizontalAlignment="Right"
                                        Margin="0,0,5,0"
                                        FontSize="16"
                                        Style="{StaticResource SpecialButtonAbort}" 
                                        Background="{ThemeResource DoubanForeground01}"
                                        VerticalAlignment="Stretch"
                                        Click="SecondTitleBtn_ClickAsync"/>
                            </Grid>
                        </Grid>
                        
                        <Grid Margin="10,10,10,0" >
                            <StackPanel Orientation="Vertical">
                                <TextBlock x:Uid="AppCache"
                                   Style="{StaticResource TitleTextStyle}"/>
                                <TextBlock x:Uid="Caculating"
                                           Name="CacheSizeTitle"
                                           Style="{StaticResource SummaryTextStyle}"/>
                            </StackPanel>
                            <Grid HorizontalAlignment="Right">
                                <Button Name="CacheClearBtn" 
                                        x:Uid="ClearCache"
                                        HorizontalAlignment="Right"
                                        Margin="0,0,5,0"
                                        FontSize="16"
                                        Click="CacheClearBtn_ClickAsync"
                                        Style="{StaticResource SpecialButtonAbort}" 
                                        Background="{ThemeResource DoubanForeground01}"
                                        VerticalAlignment="Stretch">
                                </Button>
                                <ProgressRing Name="ClearRing"
                                              Foreground="{ThemeResource DoubanForeground02}"
                                              Width="30"
                                              Height="30"
                                              IsActive="False"/>
                            </Grid>
                        </Grid>
                        <!--#endregion-->

                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
            <!--#endregion-->
            
