                            <Run Text="必要信息填入" /><LineBreak/>
                            <Run Text="UI调整优化" /><LineBreak/><LineBreak/>
                            
                            <Run Text="Version：1.0.1 / 2016.12.21" FontSize="15" FontWeight="Medium" /><LineBreak/>
                            <Run Text="主外观框架开发完成" /><LineBreak/><LineBreak/>
                            
                            <Run Text="Version：1.0.0 / 2016.12.20" FontSize="15" FontWeight="Medium" /><LineBreak/>
                            <Run Text="GuaPi For Windows10 (3rd-Party Douban) 正式进入开发阶段" /><LineBreak/><LineBreak/>
                            
                        </TextBlock>

                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
            <!--#endregion-->
            
            <!--#region About Douban-->
            <PivotItem Name="AboutENRZ" x:Uid="SettPageItem_AboutDouban" >
                <ScrollViewer>
                    <StackPanel>
                        <Image Name="IconImage" MaxWidth="480"
                               Source="/Assets/Square310x310Logo.scale-200.png" 
                               Margin="0,-110"/>

                        <TextBlock x:Uid="AboutDouban01" FontWeight="Bold" 
                                   FontSize="18" HorizontalAlignment="Center"/>
                        <TextBlock Margin="10,5,10,5" FontSize="14" FontWeight="Thin"
                               TextWrapping="WrapWholeWords">
                            <Run x:Uid="AboutDouban02"/><LineBreak/><LineBreak/>
                             <Run x:Uid="AboutDouban06"/><LineBreak/><LineBreak/>
                             <Run x:Uid="AboutDouban07"/><LineBreak/>
                        <LineBreak/>
                        </TextBlock>

                        <TextBlock x:Uid="AboutDouban03" FontWeight="Bold" 
                                   FontSize="18" HorizontalAlignment="Center"/>
                        <TextBlock Margin="10,5,10,5" FontSize="14" FontWeight="Thin"
                               TextWrapping="WrapWholeWords">
                        <Run x:Uid="AboutDouban04"/><LineBreak/>
                        <LineBreak/>
                        <Run x:Uid="AboutDouban05"/><LineBreak/>
                        <LineBreak/>
                        </TextBlock>

                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
            <!--#endregion-->
            
            <!--#region About Me-->
            <PivotItem Name="AboutMe" x:Uid="SettPageItem_AboutMe" >
                <ScrollViewer>
                    <StackPanel>
                        <Ellipse Name="Ellipse" Width="150" Height="150" Margin="10,10,10,10" 
                         VerticalAlignment="Top" >
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Assets/wallace.png" />
                            </Ellipse.Fill>
                            <Ellipse.Transitions>
                                <TransitionCollection>
                                    <EntranceThemeTransition FromVerticalOffset="-200"/>
                                </TransitionCollection>
                            </Ellipse.Transitions>
                        </Ellipse>

                        <TextBlock FontWeight="ExtraBold"
                               FontSize="20"
                               Margin="5,15,5,5"
                               TextWrapping="WrapWholeWords"
                                   HorizontalAlignment="Center">Wallace Sun</TextBlock>

                        <TextBlock FontWeight="Thin"
                                   x:Uid="Contact"
                                   FontSize="16"
                                   Margin="0,15,5,5"
                                   TextWrapping="WrapWholeWords"
                                   HorizontalAlignment="Center"></TextBlock>
                        <TextBlock FontWeight="Thin"
                               FontSize="16"
                               Margin="0,5,5,5"
                               TextWrapping="WrapWholeWords"
                                   HorizontalAlignment="Center">WeChat：miao17game</TextBlock>
                        <TextBlock FontWeight="Thin"
                               FontSize="16"
                               Margin="0,5,5,5"
                               TextWrapping="WrapWholeWords"
                                   HorizontalAlignment="Center">QQ：245396954</TextBlock>
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" Margin="0,5,5,5">
                            <TextBlock FontWeight="Thin"
                                       x:Uid="Blog"
                                       FontSize="16"
                                       TextWrapping="WrapWholeWords"></TextBlock>
                            <HyperlinkButton Content="Wallace Sun"
                                     NavigateUri="http://noodlesblog.azurewebsites.net/" 
                                     Foreground="{ThemeResource DoubanForeground01}"
                                     Padding="0" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" Margin="0,5,5,5">
                            <TextBlock FontWeight="Thin"
                                       x:Uid="Weibo"
                                       FontSize="16"
                                       TextWrapping="WrapWholeWords"></TextBlock>
                            <HyperlinkButton x:Uid="Weibo_mess"
                                     NavigateUri="http://weibo.com/miao17game?refer_flag=1001030102_" 
                                     Foreground="{ThemeResource DoubanForeground01}"
                                     Padding="0" FontWeight="Bold"/>
                        </StackPanel>

                        <TextBlock FontWeight="Thin"
                               FontSize="16"
                               Margin="0,5,5,0"
                                   HorizontalAlignment="Center"
                               TextWrapping="WrapWholeWords">
                        <Run x:Uid="D_C" FontWeight="SemiBold"/>
                        </TextBlock>
                        <TextBlock FontWeight="Thin"
                               FontSize="16"
                               Margin="0,5,5,5"
                                   HorizontalAlignment="Center"
                               TextWrapping="WrapWholeWords">
                        <Run x:Uid="Alipay" FontSize="14"/><LineBreak/>
                        </TextBlock>

                        <Rectangle Height="1" Width="300" Margin=" 35,5,35,0">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="Transparent" Offset="0.0" />
                                    <GradientStop Color="{ThemeResource ENRZLineColor}" Offset="0.5" />
                                    <GradientStop Color="Transparent" Offset="1.0" />
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>

                        <TextBlock FontWeight="Thin"
                               FontSize="16"
                               Margin="0,15,5,5"
                                   HorizontalAlignment="Center"
                               TextWrapping="WrapWholeWords">
                        <Run x:Uid="Feedback_Email" FontWeight="SemiBold"/>
                        </TextBlock>
                        <Button x:Uid="Feedback"
                            Background="{ThemeResource DoubanForeground01}"
                            Foreground="#EFEFEF"
                            Name="FeedBackBtn" 
                                 Margin="0,10,5,5"
                                HorizontalAlignment="Center"
                            Click="FeedBackBtn_Click"/>

                        <StackPanel.Transitions>
                            <TransitionCollection>
                                <EntranceThemeTransition FromVerticalOffset="400"/>
                            </TransitionCollection>
                        </StackPanel.Transitions>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
            <!--#endregion-->

            <!--#region Privacy Policy -->
            <PivotItem Name="PrivacyPolicy" x:Uid="SettPageItem_PrivacyPolicy" >
                <Grid>
                    <WebView Source="http://wallacesun.azurewebsites.net/guapi-uwp-privacy-policy/"
                         DefaultBackgroundColor="{ThemeResource DoubanBackground04}"
                             ContentLoading="WebView_ContentLoading" 
                             DOMContentLoaded="WebView_DOMContentLoaded"
                             NavigationStarting="WebView_NavigationStarting"/>
                    <ProgressRing Name="PolicyRing" Width="50" Height="50" IsActive="False"
                                  Foreground="{ThemeResource DoubanForeground01}"/>
                    <Image Name="policyRingDB"  Width="50" Height=" 50"  Visibility="Collapsed" Source="/Assets/loading_green.gif"/>
                </Grid>
            </PivotItem>
            <!--#endregion-->

        </Pivot>
    </Grid>
</Page>
