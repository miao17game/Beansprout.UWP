                                    <TextBlock Name="BroadcastNumber" Text="--" Style="{ThemeResource NumberBlockStyle}"/>
                                    <TextBlock Name="BroadcastBlock" Grid.Row="1" Style="{ThemeResource NameItemBlockStyle}"
                                   Text="GB" x:Uid="Broadcast_Name" Margin="0,10,0,0"/>
                                </StackPanel>
                                <Button Name="BroadcastButton" Grid.RowSpan="2"  Click="Button_Click" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{ThemeResource ButtonNoAnyShapeStyle}"/>
                            </Grid>

                            <Grid Name="DIARY_GRID" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Name="DiaryNumber" Text="--" Style="{ThemeResource NumberBlockStyle}" />
                                    <TextBlock Name="DiaryBlock" Grid.Row="1" Style="{ThemeResource NameItemBlockStyle}"
                                   Text="DIARY" x:Uid="Diary_Name" Margin="0,10,0,0"/>
                                </StackPanel>
                                <Button Name="DiaryButton" Grid.RowSpan="2" Click="Button_Click" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{ThemeResource ButtonNoAnyShapeStyle}"/>
                            </Grid>

                            <Grid Name="PHOTOS_GRID" Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Name="PhotosNumber" Text="--" Style="{ThemeResource NumberBlockStyle}"/>
                                    <TextBlock Name="PhotosBlock" Grid.Row="1" Style="{ThemeResource NameItemBlockStyle}"
                                   Text="PHOTO" x:Uid="Photos_Name" Margin="0,10,0,0"/>
                                </StackPanel>
                                <Button Name="PhotosButton" Grid.RowSpan="2" Click="Button_Click" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{ThemeResource ButtonNoAnyShapeStyle}"/>
                            </Grid>

                            <Grid Name="B_M_GRID" Grid.Column="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Name="BookMovieNumber" Text="--" Style="{ThemeResource NumberBlockStyle}" />
                                    <TextBlock Name="BookMovieBlock" Grid.Row="1" Style="{ThemeResource NameItemBlockStyle}"
                                   Text="BM" x:Uid="BookMovie_Name" Margin="0,10,0,0"/>
                                </StackPanel>
                                <Button Name="BookMovieButton" Grid.RowSpan="2"  Click="Button_Click" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{ThemeResource ButtonNoAnyShapeStyle}"/>
                            </Grid>

                            <Grid Name="GROUPS_GRID" Grid.Column="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Name="GroupsNumber" Text="--" Style="{ThemeResource NumberBlockStyle}" />
                                    <TextBlock Name="GroupsBlock" Grid.Row="1" Style="{ThemeResource NameItemBlockStyle}"
                                   Text="GROUP" x:Uid="Group_Name" Margin="0,10,0,0"/>
                                </StackPanel>
                                <Button Name="GroupsButton" Grid.RowSpan="2" Click="Button_Click" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{ThemeResource ButtonNoAnyShapeStyle}"/>
                            </Grid>

                        </Grid>
                    </Grid>

                    <Grid  Background="{ThemeResource DoubanBackground04}" Margin="0,20,0,0" Name="FollowGrid" Height="110" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid Name="FOLLOWING_GRID">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Name="FollowingNumber" Text="--" Style="{ThemeResource NumberBlockStyle}"/>
                                <TextBlock Name="FollowingBlock" Grid.Row="1" Style="{ThemeResource NameItemBlockStyle}"
                                   Text="FOLLOWING" x:Uid="Following_Name" Margin="0,10,0,0"/>
                            </StackPanel>
                            <Button Name="FollowingButton" Grid.RowSpan="2"  Click="Button_Click" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{ThemeResource ButtonNoAnyShapeStyle}"/>
                        </Grid>

                        <Rectangle Grid.Column="1" Margin="0,20,0,20" Fill="#AAA0A0A0" Width="0.5"/>

                        <Grid Name="FOLLOWERS_GRID" Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Name="FollowersNumber" Text="--" Style="{ThemeResource NumberBlockStyle}"/>
                                <TextBlock Name="FollowersBlock" Grid.Row="1" Style="{ThemeResource NameItemBlockStyle}"
                                   Text="FOLLOWERS" x:Uid="Followers_Name" Margin="0,10,0,0"/>
                            </StackPanel>
                            <Button Name="FollowersButton" Grid.RowSpan="2"  Click="Button_Click" 
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{ThemeResource ButtonNoAnyShapeStyle}"/>
                        </Grid>

                    </Grid>

                </StackPanel>

                <Border Margin="0,20,0,0" 
                        RelativePanel.AlignLeftWithPanel="True" 
                        RelativePanel.AlignRightWithPanel="True"
                        RelativePanel.Below="MainStack">
                    <ListView Name="ContentList" IsItemClickEnabled="True" SelectionMode="None"
                              ItemsSource="{Binding Source={StaticResource ListResources}}" 
                              ItemContainerStyle="{ThemeResource SpecialListViewItemExpanded}" 
                              ItemClick="ContentList_ItemClick" >
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="LSM:LifeStreamItem">
                                <controls:LifeStreamSingleton x:Name="Singleton"
                                                              Background="{ThemeResource DoubanBackground04}" 
                                                              Margin="0,0,0,5"
                                                              Title="{x:Bind Title}" 
                                                              Text="{x:Bind Text}"
                                                              Abstract="{x:Bind Abstract}"
                                                              Description="{x:Bind Description}"
                                                              HasCover="{x:Bind HasCover}"
                                                              Cover="{x:Bind Cover}"
                                                              Time="{x:Bind Time}"
                                                              Activity="{x:Bind Activity}"
                                                              Type="{x:Bind Type}"
                                                              LikersCount="{x:Bind LikersCounts}"
                                                              CommentsCount="{x:Bind CommentsCounts}"
                                                              HasImages="{x:Bind HasImages}"
                                                              HasAlbum="{x:Bind HasAlbum}"
                                                              MorePictures="{Binding Images, Converter={StaticResource IListToListPicBaseConverter}}"
                                                              AlbumList ="{Binding AlbumList, Converter={StaticResource IListToListPicConverter}}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Border>

            </RelativePanel>

        </ScrollViewer>

        <Grid VerticalAlignment="Top">
            <Grid Opacity="0" Name="TitleBackRec">
                <Rectangle Fill="{ThemeResource DoubanForeground03}" />
                <Rectangle Margin="0,0,0,-15" Height="15" VerticalAlignment="Bottom">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                            <GradientStopCollection >
                                <GradientStop Color="{ThemeResource DoubanShadowColor05}" Offset="0.0"/>
                                <GradientStop Color="{ThemeResource DoubanShadowColor01}" Offset="0.4"/>
                                <GradientStop Color="{ThemeResource DoubanShadowColor02}" Offset="0.6"/>
                                <GradientStop Color="{ThemeResource DoubanShadowColor03}" Offset="0.8"/>
                                <GradientStop Color="{ThemeResource DoubanShadowColor04}" Offset="1.0"/>
                            </GradientStopCollection>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Grid>
            <Border Name="BasePartBorder" 
                            Background="Transparent" 
                            Height="70" VerticalAlignment="Top">
                <TextBlock Name="navigateTitlePath"
                       x:Uid="UserInfos_Title"
                       MaxWidth="500"
                       FontWeight="Bold"
                       Text="USERINFOS" FontSize="20"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Foreground="White"/>
            </Border>
            <Button Name="BaseHamburgerButton"
                            VerticalAlignment="Top"
                            Content="&#xE26C;"
                            Width="70"
                            Height="70"
                            Click="BaseHamburgerButton_Click"
                            Foreground="White"
                            Style="{ThemeResource MainPageButtonBackHamburgerStyle}"/>
            <Button Name="FlowLayoutButton"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Content="&#xE10C;"
                            Width="70"
                            Height="70"
                            FontWeight="Black"
                            Foreground="White"
                            Style="{ThemeResource MainPageButtonBackHamburgerStyle}">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Uid="LogoutText" Name="LogoutButton" Click="LogoutButton_Click"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
           
        </Grid>

        <Border Name="IncrementalLoadingBorder" Background="#FC202020" Opacity="0.5" Height=" 60" VerticalAlignment="Bottom">
            <Image Name="IncrementalLoading" Visibility="Visible" Source="/Assets/loading_grey.gif" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15"/>
        </Border>

        <!--#region Content popup-->
        <Border x:Name="PopupBackBorder"
                Background="{ThemeResource DQDPopupBackColor}"
                Visibility="Collapsed"
                Margin="0,-16,0,0"/>

        <Popup x:Name="InnerContentPanel" 
               Margin="0,100,0,0"
               IsOpen="False"
               IsLightDismissEnabled="True"
               SizeChanged="PopupAllComments_SizeChanged"
               Closed="PopupAllComments_Closed">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PopupThemeTransition 
                        FromHorizontalOffset="0" 
                        FromVerticalOffset="300"/>
                </TransitionCollection>
            </Popup.ChildTransitions>
            <Grid x:Name="InnerGrid"
                  Background="{ThemeResource DoubanForeground03}"
                  Width="{Binding ActualWidth, ElementName=PopupAllComments, Mode=OneWay}"
                  Height="{Binding ActualHeight, ElementName=PopupAllComments, Mode=OneWay}"
                  VerticalAlignment="Bottom">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.Row="1" Background="{ThemeResource DoubanBackground05}">
                    <Frame Name="ContentFrame"/>
                </Border>
                <Button x:Name="CloseAllComsBtn"
                        VerticalAlignment="Top"
                        Height="30"
                        Content="&#xE96E;"
                        FontSize="22"
                        FontFamily="Segoe MDL2 Assets"
                        HorizontalAlignment="Stretch"
                        Style="{StaticResource MainPageButtonBackHamburgerStyle}"
                        Foreground="White"
                        Click="CloseAllComsBtn_Click"/>
                <Rectangle Margin="0,0,0,-10" Height="10" VerticalAlignment="Bottom">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                            <GradientStopCollection >
                                <GradientStop Color="{ThemeResource DoubanShadowColor05}" Offset="0.0"/>
                                <GradientStop Color="{ThemeResource DoubanShadowColor01}" Offset="0.4"/>
                                <GradientStop Color="{ThemeResource DoubanShadowColor02}" Offset="0.6"/>
                                <GradientStop Color="{ThemeResource DoubanShadowColor03}" Offset="0.8"/>
                                <GradientStop Color="{ThemeResource DoubanShadowColor04}" Offset="1.0"/>
                            </GradientStopCollection>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle Margin="0,-10,0,0" Height="10" VerticalAlignment="Top">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStopCollection >
                                <GradientStop Color="{ThemeResource DoubanShadowColor05}" Offset="0.0"/>
                                <GradientStop Color="{ThemeResource DoubanShadowColor01}" Offset="0.4"/>
                                <GradientStop Color="{ThemeResource DoubanShadowColor02}" Offset="0.6"/>
                                <GradientStop Color="{ThemeResource DoubanShadowColor03}" Offset="0.8"/>
                                <GradientStop Color="{ThemeResource DoubanShadowColor04}" Offset="1.0"/>
                            </GradientStopCollection>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Grid>
        </Popup>
        <!--#endregion-->

    </Grid>
</Base:BaseContentPage>
