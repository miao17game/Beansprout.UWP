                                <Ellipse Name="HeadUserImage" Width="147" Height="147" >
                                    <Ellipse.Fill>
                                        <SolidColorBrush Color="#707070"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Border>
                        </StackPanel>

